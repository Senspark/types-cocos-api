{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "target": "es5",
        "declaration": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ]
}